<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../components/head.ejs') %>
    <link rel="stylesheet" href="/public/assets/css/myOrder.css" />
  </head>
  <body>
    <!-- search -->
    <%- include('../components/search_overlay.ejs') %>

    <!-- header -->
    <%- include('../components/header.ejs') %>

    <div class="body_main">
      <div class="main-left">
        <div class="profile">
          <div class="img_user">
            <img src="<%= acc.avatar %>" alt="" />
          </div>
          <div class="name_user">
            <h3><%= acc.firstname %> <%= acc.lastname %></h3>
          </div>
        </div>
        <div class="main-left_items">
          <div class="item"><i class="far fa-user"></i> Tài khoản của tôi</div>
          <div class="item"><i class="fas fa-clipboard"></i> Đơn mua</div>
          <div class="item"><i class="fas fa-key"></i> Thay đổi mật khẩu</div>
        </div>
      </div>
      <div class="main-right">
        <!-- <div class="search-order">
          <input
            type="text"
            name=""
            id=""
            placeholder="Tìm kiếm theo id hoặc tên sản phẩm"
          />
        </div> -->

        <div class="container-orders">
          <% myorder.forEach( (ele) => { %>

          <div class="container-order">
            <div class="header-order">
              <div class="order-id">Id: <%= ele._id %></div>
              <div class="date_order"><%= ele.orderDate %></div>
              <div class="order-status">
                Trạng thái đơn hàng : <%= ele.status %>
              </div>
            </div>
            <div class="body-order">
              <!-- //item -->
              <% var prds = ele.product %>
              <!-- item -->
              <% prds.map(prd =>{ %>
              <div class="order-item">
                <div class="order-item_left">
                  <div class="item-img">
                    <img class="img" src="<%= prd.productId.img %>" alt="" />
                  </div>
                  <div class="item-title">
                    <div class="title-name"><%= prd.productId.name %></div>
                    <div class="title-quantity">
                      Số lượng : <%= prd.quantity %>
                    </div>
                  </div>
                </div>
                <div class="order-item_right">
                  <div class="item-price">
                    <span
                      >Đơn giá : <%= prd.productId.price.toLocaleString() %> đ
                    </span>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
            <div class="total-money">
              Tổng tiền : <%= ele.totalPrice.toLocaleString() %> đ
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <!-- footer -->
    <%- include('../components/footer.ejs') %>
  </body>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  ></script>
  <script src="/public/assets/js/form_page.js"></script>
  <script src="/public/assets/js/cart_localStorage.js"></script>
  <script src="/public/assets/js/signin-login.js"></script>
</html>
