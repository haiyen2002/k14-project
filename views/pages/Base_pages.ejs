  <% if(content == 'prd_detail' ){ %>
        
    <script>
        //SHOW-CHILDREN-ITEM-NAV-MOBILE -1
        const more = document.querySelectorAll(".more-item")
        const more_link = document.querySelectorAll(".more-item-click")
        const chid = document.querySelectorAll(".show_children")
        for (let i = 0; i < more.length; i++) {
            more[i].addEventListener("click", ()=>{
                chid[i].style.display = 'block';
                more[i].style.display = 'none';
                more_link[i].style.display = 'block';
            })
            more_link[i].addEventListener("click", ()=>{
                chid[i].style.display = 'none';
                more[i].style.display = 'block';
                more_link[i].style.display = 'none';
            })
            
        }
  </script>
    <% } %>
